#!/bin/bash

/sbin/ip route flush table <%= @vpn_routing_table %>
/sbin/ip route add unreachable default table <%= @vpn_routing_table %>

<% if scope.source.name == 'openvpn::ipredatorstatic' %>
/sbin/ip ro del 46.246.52.249 via <%= @nativeipv4gw %>
/sbin/ip ro del 46.246.52.254 via <%= @nativeipv4gw %>
/sbin/ip -6 neigh del proxy <%= @staticipv6prefix -%> dev $1 #ND Fucking
/sbin/ip -6 ru del from <%= @staticipv6 -%>  lookup <%= @vpn_routing_table %> #V6 Transfer Net
/sbin/ip -6 ru del from <%= scope['::radvd::ipv6_prefix_without_length'] %>/<%= scope['::radvd::ipv6_prefix_length'] %> lookup <%= @vpn_routing_table %> #V6 Routed Net
<% end %>

<% @dependent_services.each do |service| -%>
service <%= service -%> restart
<% end -%>

exit 0
