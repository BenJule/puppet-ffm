# this file is managed by puppet
<% if @listen_address != '127.0.0.1' -%>
bind-interfaces
<% end -%>
except-interface=lo
<% @dns_interfaces.each do |interface| -%>
interface=<%= interface %>
<% end -%>
listen-address=<%= @listen_address %>
no-dhcp-interface=<%= @no_dhcp_interface %>
domain-needed
no-resolv
no-hosts
cache-size=4096
log-facility=/var/log/dnsmasq.log
